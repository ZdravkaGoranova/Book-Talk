

    <section class="edit-form-container">

        <form method="POST">
            <h3>Edit Book Review</h3>
            <label>Title</label>
            <input type="text" name="" class="box" value="{{book.title}}" id="">
            <label>Author</label>
            <input type="text" name="" class="box" value="{{book.author}}" id="">
            <label>Genre</label>
            <input type="text" name="" class="box" value="{{book.genre}}" id="">
            <label>Stars</label>
            <input type="number" name="" class="box" value="{{book.stars}}" id="">
            <label>Image</label>
            <input type="text" name="" class="box" value="{{book.image}}" id="">
            <label>Review</label>
            <textarea class="box"
                name="">{{book.bookReview}}</textarea>
            <input type="submit" value="Edit" class="btn">
        </form>
    </section>
